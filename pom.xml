<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <version>7.2.0.2</version>
  </parent>
  <artifactId>dx-base-demo-templates</artifactId>
  <version>2.1.0</version>
  <packaging>bundle</packaging>
  <name>DX Base Demo Templates</name>
  <description>Base demo templates set for Jahia DX</description>
  <scm>
    <connection>scm:git:git@github.com:Jahia/dx-base-demo-templates.git</connection>
    <developerConnection>scm:git:git@github.com:Jahia/dx-base-demo-templates.git</developerConnection>
    <url>https://github.com/Jahia/dx-base-demo-templates</url>
    <tag>2_1_0</tag>
  </scm>
  <properties>
    <jahia-module-type>templatesSet</jahia-module-type>
    <jahia-depends>bootstrap3-components,bootstrap3-core,default,dx-base-demo-core,font-awesome,calendar,event,facets,grid,jquery,location,bookmarks,news,person,press,rating,search,topstories</jahia-depends>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>org.jahia.services.search,
                            ${jahia.plugin.projectPackageImport},
                            *</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
